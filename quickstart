#!/bin/sh

# stop any existing processes first
./killem.sh
sleep 0.25

if [ "$SNIS_SOLARSYSTEM" = "" ]
then
	SNIS_SOLARSYSTEM=default
fi

uname -a | grep '^Darwin ' > /dev/null 2>&1
if [ "$?" = "0" ]
then
	OSX="1"	
else
	OSX=0
fi

usage()
{
	echo "usage: quickstart star-ship-name password" 1>&2
	echo "example:" 1>&2
	echo "./quickstart Enterprise tribbles" 1>&2
	exit 1
}

shipname="$1"
if [ "$1" = "" ]
then
	shipname="spacenerd"	
fi

password="$2"
if [ "$2" = "" ]
then
	password="spacenerd"
fi

# start the lobby server
ssgl/ssgl_server

sleep 0.25

start_multiverse()
{
	if [ ! -d ./snisdb ]
	then
		echo "./snisdb/ does not exist, creating directory." 1>&2
		mkdir ./snisdb
		if [ "$?" != "0" ]
		then
			echo "mkdir ./snisdb failed."
		fi
		if [ ! -d ./snisdb ]
		then
			echo "Directory ./snisdb does not exist, snis_multiverse will not run without it, please create it." 1>&2
			exit 1
		fi
		echo "Created ./snisdb for snis_multiverse" 1>&2
	fi
	./snis_multiverse localhost nickname narnia
	echo "snis_multiverse died, status was $?" 1>&2
}

start_multiverse &

sleep 0.25

get_solarsystem_name()
{
	if [ -d share/snis/solarsystems/"$1" ]
	then
		echo "$1"
	else
		echo "default2"
	fi
}

uppercase()
{
	echo "$1" | tr '[a-z]' '[A-Z]'
}

SS1=$(get_solarsystem_name karado)
SS2=$(get_solarsystem_name sirius)
SS3=$(get_solarsystem_name polaris)
SS4=$(get_solarsystem_name tau-scorpii)

export SNISRAND=12345
./snis_server -l localhost -L $(uppercase "$SS1") --enable-enscript -m narnia -s "$SS1" &
if [ "$MULTIVERSE_TEST" != "" ]
then
	export SNISRAND=54321
	./snis_server -l localhost -L $(uppercase "$SS2") --enable-enscript -m narnia -s "$SS2" &
	export SNISRAND=9557
	./snis_server -l localhost -L $(uppercase "$SS3") --enable-enscript -m narnia -s "$SS3" &
	export SNISRAND=1337
	./snis_server -l localhost -L $(uppercase "$SS4") --enable-enscript -m narnia -s "$SS4" &
fi

sleep 2.50

# Some common aspect ratios.  Note: the game was designed on a machine
# with a 16:9 aspect ratio.  Other aspect ratios may have some UI issues.
#
# ASPECT_RATIO, if unspecified, will figure it out from window manager
ASPECT_RATIO="${ASPECT_RATIO:-}"
# ASPECT_RATIO="5:4"
# ASPECT_RATIO="4:3"
# ASPECT_RATIO="16:10"
# ASPECT_RATIO="16:9"

if [ "$ASPECT_RATIO" != "" ]
then
	ASPECT_RATIO_ARG="--aspect-ratio $ASPECT_RATIO"
else
	ASPECT_RATIO_ARG=""
fi

# start the game client and server in quickstart mode
# ./snis_client $ASPECT_RATIO --fullscreen --solarsystem "$SNIS_SOLARSYSTEM" --quickstart --starship "$shipname" --pw "$password" $@
./snis_client $ASPECT_RATIO_ARG --fullscreen --starship "$shipname" --pw "$password" $@

exit $?

